{erl_opts, [
            debug_info,
            warn_untyped_records,
            warnings_as_errors
           ]}.

{deps, [
        {erlang_ale, {git, "https://github.com/helium/erlang_ale", {branch, "madninja/max_block_size"}}}
        ]}.

{xref_checks,[
              undefined_function_calls,
              undefined_functions, %locals_not_used,
              deprecated_function_calls,
              deprecated_functions
             ]}.

{dialyzer, [
            {warnings, [unknown]},
            {plt_apps,all_deps}
           ]}.
